		double Debt4 = 7768 * 1;// June 30
		
		double MonthlyInterest = (Debt1 + Debt2 + Debt3 + Debt4)/30;
		double rate = (MonthlyInterest/100) * MonthlyIntrestRate;
		
		System.out.println("The rate is:" + rate);
		
		double monthlydebt = AllDebt1 + rate;
